@model EliteEscapes.Web.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-success bg-gradient py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Reset Your Password</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form asp-action="ResetPassword" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                                <label asp-for="NewPassword"></label>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" />
                                <label asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="w-100 btn btn-lg btn-outline-success">
                                Reset Password
                            </button>

                            <div class="text-center mt-3">
                                <a asp-action="Login" class="text-decoration-none">
                                    <i class="bi bi-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
